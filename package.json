{
  "name": "multimc-hub",
  "version": "1.0.0",
  "description": "A standalone desktop application for managing Minecraft servers with network discovery, mod management, and multiplayer hosting",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "publish": "electron-builder --publish=always",
    "dist": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "make-installer": "npm run build:win && npm run build:mac"
  },
  "keywords": [
    "minecraft",
    "server",
    "multiplayer",
    "network",
    "electron",
    "desktop",
    "standalone",
    "mods",
    "gaming",
    "server-management"
  ],
  "author": {
    "name": "MultiMC Hub Team",
    "email": "support@multimc-hub.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.7.4"
  },
  "build": {
    "appId": "com.multimc.hub",
    "productName": "MultiMC Hub",
    "copyright": "Copyright Â© 2024 MultiMC Hub Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!**/*.map",
      "!**/test/**/*",
      "!**/tests/**/*",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "build/installer",
        "to": "installer"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "MultiMC Hub",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.games",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MultiMC Hub",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh"
    },
    "dmg": {
      "title": "MultiMC Hub Installer",
      "icon": "build/icon.icns",
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "billibobby",
      "repo": "multimc",
      "private": false,
      "releaseType": "release"
    },
    "afterSign": "scripts/notarize.js",
    "afterAllArtifactBuild": "scripts/after-build.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/billibobby/multimc.git"
  },
  "bugs": {
    "url": "https://github.com/billibobby/multimc/issues"
  },
  "homepage": "https://github.com/billibobby/multimc#readme"
}
