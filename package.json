{
  "name": "multimc-hub",
  "version": "1.0.0",
  "description": "Multi-Hosting Minecraft Server Hub - Easy server hosting and transfer between friends",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "minecraft",
    "server",
    "multiplayer",
    "hosting",
    "forge",
    "electron",
    "desktop"
  ],
  "author": "MultiMC Hub Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "minecraft-server-util": "^5.4.0",
    "fs-extra": "^11.1.1",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.multimc.hub",
    "productName": "MultiMC Hub",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/multimc-hub.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/multimc-hub/issues"
  },
  "homepage": "https://github.com/yourusername/multimc-hub#readme"
} 