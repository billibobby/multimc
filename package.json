{
  "name": "multimc-hub",
  "version": "1.0.0",
  "description": "A multi-hosting Minecraft server hub with network discovery and management",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --publish=always",
    "dist": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "minecraft",
    "server",
    "multiplayer",
    "network",
    "electron",
    "desktop"
  ],
  "author": "MultiMC Hub Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "socket.io": "^4.7.4"
  },
  "build": {
    "appId": "com.multimc.hub",
    "productName": "MultiMC Hub",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "MultiMC Hub"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MultiMC Hub"
    },
    "publish": {
      "provider": "github",
      "owner": "billibobby",
      "repo": "multimc"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/multimc-hub.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/multimc-hub/issues"
  },
  "homepage": "https://github.com/yourusername/multimc-hub#readme"
} 